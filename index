  <script>
    // Utility: year & print
    document.getElementById('year').textContent = new Date().getFullYear();
    document.getElementById('printBtn').addEventListener('click', () => window.print());

    // Minimal JS demo for the message form
    const form = document.getElementById('msgForm');
    const status = document.getElementById('msgStatus');
    document.getElementById('sendBtn').addEventListener('click', () => {
      const name = document.getElementById('name').value.trim();
      const msg = document.getElementById('message').value.trim();
      if (!name || !msg) { status.textContent = 'Please fill out both fields.'; return; }
      status.textContent = 'Thanks, ' + name + '! Your message has been captured locally.';
      // In production, replace with a real endpoint (Formspree, Netlify Forms, etc.)
      console.log({ name, msg, when: new Date().toISOString() });
      form.reset();
    });

    // Optional: keyboard nav focus outline toggle for mouse users
    function handleFirstTab(e) {
      if (e.key === 'Tab') {
        document.body.classList.add('user-is-tabbing');
        window.removeEventListener('keydown', handleFirstTab);
      }
    }
    window.addEventListener('keydown', handleFirstTab);
  </script>
